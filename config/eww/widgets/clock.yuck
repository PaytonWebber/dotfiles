(defpoll time :interval "15s"
              :initial ""  ; optional, defaults to poll at startup
              :run-while time-visible   ; optional, defaults to 'true'
  `date +"%-I:%M %p"`)
(defwidget clock []
  (box :class "module" :orientation "h"
    (label
      :class "clock"
      :text time
    )
  )
)
